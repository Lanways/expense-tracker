<div class="container">
  <div class="form-group mt-5" style="width:">
    <select class="form-select" aria-label="Default select example">
      <option selected>類別</option>
      <option value="1">家居物業</option>
      <option value="2">交通出行</option>
      <option value="3">休閒娛樂</option>
      <option value="4">餐飲食品</option>
      <option value="5">其他</option>
    </select>
  </div>
  <div class="d-flex justify-content-center my-5">
    <p>總金額:</p>
    <h1>
      25260
    </h1>
  </div>
  <ul class="list-group">
    {{#each records}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-auto me-auto align-items-center">
          <h4 style="display: inline; vertical-align: middle;">
            {{this.name}}
          </h4>
          <p>{{this.date}}</p>
        </div>
        <div class="d-flex col-auto align-items-center">
          {{this.amount}}
        </div>
        <div class="d-flex col-auto align-items-center">
          <a class="btn btn-success" href="./records/{{this._id}}/edit">edit</a>
        </div>
        <form action="./records/{{this._id}}?_method=DELETE" method="POST" class="d-flex col-auto align-items-center">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </li>
    {{/each}}
  </ul>
  <div class="d-grid mt-3">
    <a href="records/new" class="btn btn-primary">新增記帳</a>
  </div>
</div>