<div class="container">
  <form action="/records/{{record._id}}?_method=PUT " method="POST">
    <div class="mb-2">
      <label for="name">
        名稱<span class="text-danger">*</span>
      </label>
      <input type="text" class="form-control" id="name" name="name" placeholder="飲料" value="{{record.name}}" required>
    </div>
    <div class="mb-2">
      <label for="date">
        日期<span class="text-danger">*</span>
      </label>
      <input type="date" class="form-control" id="date" name="date" placeholder="" value="{{record.date}}" required>
    </div>
    <div class="mb-2">
      <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
      <select class="form-control" id="category" name="category" required>
        <option value="家居物業" {{#if (eq record.category.name "家居物業" )}} selected {{/if}}>家居物業</option>
        <option value="交通出行" {{#if (eq record.category.name "交通出行" )}}selected{{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if (eq record.category.name "休閒娛樂" )}}selected{{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if (eq record.category.name "餐飲食品" )}}selected{{/if}}>餐飲食品</option>
        <option value="其他" {{#if (eq record.category.name "其他" )}}selected{{/if}}>其他</option>
      </select>
    </div>
    <div class="mb-2">
      <label for="amount">
        金額<span class="text-danger">*</span>
      </label>
      <input type="text" class="form-control" id="amount" name="amount" placeholder="金額" value="{{record.amount}}"
        required>
    </div>
    <div class="mb-2">
      <button type="submit" class="btn btn-primary">Save</button>
      <a href="/" class="btn btn-primary">back</a>
    </div>
  </form>
</div>